<test name="CamelJBangPluginTest" author="Gaelle" status="FINAL" xmlns="http://citrusframework.org/schema/xml/testcase"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://citrusframework.org/schema/xml/testcase http://citrusframework.org/schema/xml/testcase/citrus-testcase.xsd
                          http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
  <description>Sample test in XML</description>
  <actions>
    <camel>
      <jbang>
        <plugin>
          <add name="kubernetes" args="--command kubernetes"/>
        </plugin>
      </jbang>
    </camel>
    <camel>
      <jbang>
        <plugin>
          <kubernetes>
            <export>
              <integration file="../route.yaml"/>

              <image-registry>registry.minikube</image-registry>
              <image-builder>docker</image-builder>
              <build-properties>
                <property name="quarkus.kubernetes.image-pull-policy" value="never"/>
              </build-properties>
              <traits>
                <trait name="container.image-pull-policy" value="IfNotPresent"/>
                <trait name="container.image-push" value="true"/>
              </traits>
              <args>
                <argument>--runtime</argument>
                <argument>quarkus</argument>
              </args>
            </export>
          </kubernetes>
        </plugin>
      </jbang>
    </camel>


    <camel>
      <jbang>
        <plugin>
          <kubernetes>
            <verify integration="hello-xml" log-message="HELLO CAMEL #10"/>
          </kubernetes>
        </plugin>
      </jbang>
    </camel>

  </actions>
  <finally>
    <camel>
      <jbang>
        <plugin>
          <kubernetes>
            <delete>
              <integration file="../route.yaml"/>
            </delete>
          </kubernetes>
        </plugin>
      </jbang>
    </camel>
  </finally>
</test>
